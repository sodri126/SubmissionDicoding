<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.submission5">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission android:name="com.example.submission5.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.submission5.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:name="com.example.submission5.MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="com.example.submission5.data.local.provider"
            android:name=".data.local.provider.FavoriteMovieProvider"
            android:exported="true"
            android:readPermission="com.example.submission5.READ_DATABASE"
            android:writePermission="com.example.submission5.WRITE_DATABASE" />

        <activity
            android:name="com.example.submission5.ui.notification.activity.SettingNotificationActivity"
            android:label="@string/general_setting_notification"
            android:theme="@style/SwitchTheme" />
        <activity android:name="com.example.submission5.ui.searchfilm.SearchActivity" />
        <activity android:name="com.example.submission5.ui.detailfilm.DetailActivity" />
        <activity
            android:name="com.example.submission5.ui.listfilm.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:enabled="true"
            android:exported="true"
            android:name="com.example.submission5.ui.notification.daily.DailyReminder" />

        <receiver
            android:enabled="true"
            android:exported="true"
            android:name="com.example.submission5.ui.notification.releasetoday.ReleaseTodayReminder"/>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>