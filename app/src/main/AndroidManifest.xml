<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.submission5">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.example.submission5.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.submission5.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:name=".MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".ui.widget.MovieBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_banner_widget_info" />
        </receiver>

        <service
            android:name="com.example.submission5.ui.widget.StackWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />


        <provider
            android:name="com.example.submission5.data.local.provider.FavoriteMovieProvider"
            android:authorities="com.example.submission5.data.local.provider"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="true"
            android:readPermission="com.example.submission5.READ_DATABASE"
            android:writePermission="com.example.submission5.WRITE_DATABASE" />

        <activity
            android:name=".ui.notification.activity.SettingNotificationActivity"
            android:label="@string/general_setting_notification"
            android:theme="@style/SwitchTheme" />
        <activity android:name=".ui.searchfilm.SearchActivity" />
        <activity android:name=".ui.detailfilm.DetailActivity" />
        <activity
            android:name=".ui.listfilm.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".ui.notification.daily.DailyReminder"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".ui.notification.releasetoday.ReleaseTodayReminder"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>